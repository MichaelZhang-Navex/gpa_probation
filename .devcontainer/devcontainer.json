{
	"name": "Ubuntu",
	"image": "mcr.microsoft.com/devcontainers/python:3.11",
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/devcontainers/features/nix:1": {}
	},
	"postCreateCommand": {
		"zshrc": ["cp", "${containerWorkspaceFolder}/.devcontainer/.zshrc", "/root/"],
		"nix": ["nix-env","-if","${containerWorkspaceFolder}/.devcontainer/init.nix"],
		"pip": ["pip", "install", "-r", "${containerWorkspaceFolder}/.devcontainer/requirements.txt"],
		"github_email": ["git", "config", "--global", "user.email", "\"michael.zhang@navex.com\""],
		"github_user": ["git", "config", "--global", "user.name", "\"Michael Zhang\""]
	},
	"remoteUser": "root",
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh",
				"[python]": {
					"editor.defaultFormatter": "ms-python.black-formatter"
				},
				"files.associations": {
					"*.sql": "jinja-sql"
				},
				"terminal.integrated.fontFamily": "'FantasqueSansM Nerd Font',Menlo, Monaco, 'Courier New', monospace",
				"terminal.integrated.fontSize": 16,
				"workbench.colorTheme": "Ayu Mirage Bordered"
			},
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-azuretools.vscode-docker",
				"oderwat.indent-rainbow",
				"tal7aouy.rainbow-bracket",
				"eamodio.gitlens",
				"ms-python.black-formatter",
				"ms-toolsai.jupyter",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"teabyii.ayu",
				"TomRijndorp.find-it-faster",
				"Gruntfuggly.todo-tree"
			]
		}
	}
}

